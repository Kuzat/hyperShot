{
  "name": "hyperShot",
  "productName": "hyperShot",
  "version": "0.3.0-a",
  "description": "A powerfull cross-platform screenshoting tool",
  "license": "MIT",
  "repository": "https://github.com/Kuzat/hyperShot",
  "author": {
    "name": "Vegard Bj√∏rsvik",
    "email": "vegardbjr@gmai.com",
    "url": "https://github.com/Kuzat"
  },
  "scripts": {
    "test": "xo",
    "start": "electron . --enable-transparent-visuals --disable-gpu",
	"dist": "build",
	"dist-travis": "build --linux deb --mac",
    "dist-linux": "build --linux deb",
	"dist-win": "build --win"
  },
  "files": [
    "index.js",
    "index.html"
  ],
  "build": {
    "appId": "com.kuzat.hyperShot",
    "mac": {
        "category": "public.app-category.productivity"
    },
    "linux": {
        "target": ["deb"]
    }
  },
  "keywords": [
    "electron-app",
    "electron",
    "screenshot",
    "hyperShot",
    "cross-platform",
    "OS X",
    "MAC OS",
    "Windows",
    "Linux"
  ],
  "dependencies": {
    "electron-debug": "1.0.X",
    "electron-settings": "3.0.X",
    "imgur": "0.2.X",
    "screenshot-node": "1.2.X",
    "tmp": "^0.0.31"
  },
  "devDependencies": {
    "devtron": "1.1.X",
    "electron": "1.6.X",
    "electron-builder": "^18.3.X",
    "electron-rebuild": "1.5.X",
    "xo": "0.18.X"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
